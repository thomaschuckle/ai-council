import json
import boto3
import os

dynamodb = boto3.resource('dynamodb')
connections_table = dynamodb.Table('websocket-connections')

def lambda_handler(event, context):
    connection_id = event['requestContext']['connectionId']
    
    try:
        body = json.loads(event.get('body', '{}'))
        conversation_id = body.get('conversation_id')
        
        if not conversation_id:
            return {
                'statusCode': 400,
                'body': json.dumps({'error': 'conversation_id is required'})
            }
        
        # Update connection with conversation subscription
        connections_table.update_item(
            Key={'connection_id': connection_id},
            UpdateExpression='SET conversation_id = :cid',
            ExpressionAttributeValues={':cid': conversation_id}
        )
        
        print(f"Connection {connection_id} subscribed to {conversation_id}")
        
        return {
            'statusCode': 200,
            'body': json.dumps({
                'message': f'Subscribed to {conversation_id}',
                'conversation_id': conversation_id
            })
        }
    except Exception as e:
        print(f"Error: {e}")
        return {
            'statusCode': 500,
            'body': json.dumps({'error': str(e)})
        }